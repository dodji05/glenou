{% extends 'dashboard_base.html.twig' %}

{% block title %}Produits{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">{{ produit.libelle }}</h3>
                    <div class="card-header-elements ms-auto">
                    <div class="card-tools  ms-auto">
                        <a  class="btn btn-outline-danger float-right" href="{{ path('app_produits_new') }}"><i class="fas fa-trash-alt"></i> Supprimer</a>
                        <a  class="btn btn-outline-primary float-right  mr-1" href="{{ path('app_produits_edit', {'id': produit.id}) }}"><i class="fas fa-edit"></i> Modifier</a>

{#                                            <button type="button" class="btn btn-tool" data-card-widget="collapse">#}
{#                                                <i class="fas fa-minus"></i>#}
{#                                            </button>#}
{#                                            <button type="button" class="btn btn-tool" data-card-widget="remove">#}
{#                                         class="table table-striped dataTables_wrapper dt-bootstrap4" id="example1_wrapper"        <i class="fas fa-times"></i>#}
{#                                            </button>#}
                    </div>
                    </div>
                </div>
                <div class="card-body p-5">
                    <div class="row">
                        <div class="col-sm-4 col-md-6">
                            <img src="{{ vich_uploader_asset(produit.imagesProduits.first) }}" class="img-fluid"/>
                        </div>
                        <div class="col-sm-8 col-md-6">
                            <table class="table">
                                <tbody>

                                <tr>
                                    <th>Description</th>
                                    <td>{{ produit.description }}</td>
                                </tr>
                                <tr>
                                    <th>Disponibilite</th>
                                    <td>{{ produit.disponibilite }}</td>
                                </tr>

                                <tr>
                                    <th>Prix</th>
                                    <td>{{ produit.prix }}</td>
                                </tr>
                                <tr>
                                    <th>Stock</th>
                                    <td>{{ produit.stock }} {{ produit.uniteMesure }}</td>
                                </tr>
                                <tr>
                                    <th>Vendu</th>
                                    <td>{{ produit.stock - 7 }} {{ produit.uniteMesure }}</td>
                                </tr>
                                <tr>
                                    <th>Nombre de vue</th>
                                    <td>90</td>
                                </tr>
                                <tr>
                                    <th>Localite</th>
                                    <td>{{ produit.localite }}</td>
                                </tr>

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Images</h3>
                </div>
                <div class="card-body p-5">
                    <div class="row">
                        {% for images in produit.imagesProduits %}
                        <div class="col-sm-3 col-md-2">
                            <img src="{{ vich_uploader_asset(images) }}" class="img-fluid"/>
                            {{ include('back/produits/_delete_form_image.html.twig') }}
                        </div>
                        {% endfor %}

                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Ventes</h3>
                </div>
                <div class="card-body p-5">
                    <div class="row">


                    </div>
                </div>
            </div>
        </div>
    </div>


    <a href="{{ path('app_produits_index') }}">back to list</a>

    <a href="{{ path('app_produits_edit', {'id': produit.id}) }}">edit</a>

    {{ include('back/produits/_delete_form.html.twig') }}
{% endblock %}
