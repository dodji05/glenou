{% extends 'base.html.twig' %}
{% block stylesheets %}

    <link rel="stylesheet" href="{{ asset('front/css/contact.css') }}">


{% endblock %}
{% block title %}

{% endblock %}
{% block body %}
    <!--=====================================
                   BANNER PART START
       =======================================-->
    <section class="inner-section single-banner" style="background: url(images/single-banner.jpg) no-repeat center;">
        <div class="container">
            <h2>Nous contacter</h2>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="{{ path('app_accueil') }}">Accueil</a></li>
                <li class="breadcrumb-item active" aria-current="page">Contact</li>
            </ol>
        </div>
    </section>
    <!--=====================================
                BANNER PART END
    =======================================-->
    <section class="inner-section contact-part">
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-lg-4">
                    <div class="contact-card">
                        <i class="icofont-location-pin"></i>
                        <h4> Adresse </h4>

                        <p>B.P. 372 BOHICON - Bénin</p>
                    </div>
                </div>
                <div class="col-md-6 col-lg-4">
                    <div class="contact-card active">
                        <i class="icofont-phone"></i>
                        <h4>Téléphone</h4>
                        <p>
                            <a href="#">+229 51 06 05 75 </a>
                            <a href="#">+229 51 06 05 76</a>
                        </p>
                    </div>
                </div>
                <div class="col-md-6 col-lg-4">
                    <div class="contact-card">
                        <i class="icofont-email"></i>
                        <h4>Email</h4>
                        <p>
                            <a href="#">eyobu@fuprobenin.org</a>
                            <a href="#">fuproben@yahoo.fr</a>
                        </p>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6">
                    <div class="contact-map">
                        <iframe src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d15834.004771971871!2d2.0391738!3d7.1835069!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0xf8bdb226da69b943!2sFUPRO!5e0!3m2!1sfr!2sbj!4v1655206269498!5m2!1sfr!2sbj"
                                width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy"
                                referrerpolicy="no-referrer-when-downgrade"></iframe>
                    </div>
                </div>
                <div class="col-lg-6">
                    <form class="contact-form">
                        <h4>Ecrivez votre message</h4>
                        <div class="form-group">
                            <div class="form-input-group">
                                <input class="form-control" type="text" placeholder="Nom & prenom">
                                <i class="icofont-user-alt-3"></i>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="form-input-group">
                                <input class="form-control" type="text" placeholder="Email">
                                <i class="icofont-email"></i>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="form-input-group">
                                <input class="form-control" type="text" placeholder="Objet">
                                <i class="icofont-book-mark"></i>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="form-input-group">
                                <textarea class="form-control" placeholder="Votre Message"></textarea>
                                <i class="icofont-paragraph"></i>
                            </div>
                        </div>
                        <button type="submit" class="form-btn-group">
                            <i class="fas fa-envelope"></i>
                            <span>envoyer</span>
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </section>

{% endblock %}