<body class="hold-transition sidebar-mini">
<div class="wrapper">
    <!-- Navbar -->
    <nav class="main-header navbar navbar-expand navbar-white navbar-light">
        <!-- Left navbar links -->
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
            </li>
            <li class="nav-item d-none d-sm-inline-block">
                <a href="#" class="nav-link">Tableau de bord</a>
            </li>
            <li class="nav-item d-none d-sm-inline-block">
                <a href="#" class="nav-link">Contact</a>
            </li>
        </ul>

        <!-- Right navbar links -->
        <ul class="navbar-nav ml-auto">
            <!-- Navbar Search -->
            <li class="nav-item">
                <a class="nav-link" data-widget="navbar-search" href="#" role="button">
                    <i class="fas fa-search"></i>
                </a>
                <div class="navbar-search-block">
                    <form class="form-inline">
                        <div class="input-group input-group-sm">
                            <input class="form-control form-control-navbar" type="search" placeholder="Search"
                                   aria-label="Search">
                            <div class="input-group-append">
                                <button class="btn btn-navbar" type="submit">
                                    <i class="fas fa-search"></i>
                                </button>
                                <button class="btn btn-navbar" type="button" data-widget="navbar-search">
                                    <i class="fas fa-times"></i>
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </li>


            <li class="nav-item">
                <a class="nav-link" data-widget="control-sidebar" data-slide="true" href="#" role="button">
                    <i class="fas fa-th-large"></i>
                </a>
            </li>
        </ul>
    </nav>
    <!-- /.navbar -->

    <!-- Main Sidebar Container -->
    <aside class="main-sidebar sidebar-dark-primary elevation-4">
        <!-- Brand Logo -->
        <a href="#" class="brand-link">
            <img src="{{ asset('app/images/fupro.jpg') }}" alt="Fupro-Benin"
                 class="brand-image img-circle elevation-3" style="opacity: .8">
            <span class="brand-text font-weight-light">eYobu</span>
        </a>

        <!-- Sidebar -->
        <div class="sidebar">
            {% if app.user %}
            <!-- Sidebar user panel (optional) -->
            <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                <div class="image">
                    <img src="{{ asset('app/images/avatar.png') }}" class="img-circle elevation-2" alt="User Image">
                </div>

                <div class="info">
                    <a href="#" class="d-block">{{ app.user.userIdentifier }}</a>
                </div>

            </div>
            {% endif %}
            <!-- SidebarSearch Form -->
            {# <div class="form-inline"> #}
            {# <div class="input-group" data-widget="sidebar-search"> #}
            {# <input class="form-control form-control-sidebar" type="search" placeholder="Search" aria-label="Search"> #}
            {# <div class="input-group-append"> #}
            {# <button class="btn btn-sidebar"> #}
            {# <i class="fas fa-search fa-fw"></i> #}
            {# </button> #}
            {# </div> #}
            {# </div> #}
            {# </div> #}

      <!-- Sidebar Menu -->
            {% include 'back/menu/_menu_admin.html.twig' %}
            {% if app.user %}

                {% if is_granted('ROLE_ADMINISTRATEUR') %}
                    {% include 'dashboard/menu/_menu_admin_general.html.twig' %}
                {% elseif is_granted('ROLE_ACTEUR_FUPRO') %}
                    {% include 'back/menu/_menu_producteur.html.twig' %}
                    {% else  %}
                        {% include 'dashboard/menu/_menu_prod_trans.html.twig' %}

                {% endif %}
            {% endif %}
           <!-- /.sidebar-menu -->
        </div>
        <!-- /.sidebar -->
    </aside>

    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <div class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1 class="m-0">
                            {% if pageTitle is defined %}
                                {{ pageTitle }}
                            {% endif %}

                        </h1>
                    </div><!-- /.col -->
                    {# <div class="col-sm-6"> #}
                    {# <ol class="breadcrumb float-sm-right"> #}
                    {# <li class="breadcrumb-item"><a href="#">Home</a></li> #}
                    {# <li class="breadcrumb-item active">Starter Page</li> #}
                    {# </ol> #}
                    {# </div> #}
                    <!-- /.col -->
                </div><!-- /.row -->
            </div><!-- /.container-fluid -->
        </div>
        <!-- /.content-header -->

        <!-- Main content -->
        <section class="content">
            {% block body %}
            {% endblock %}
        </section>
        <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->
</div>
<!-- jQuery -->
<script src="{{ asset('dashboard/plugins/jquery/jquery.min.js') }}"></script>
<!-- Bootstrap 4 -->
<script src="{{ asset('dashboard/plugins/bootstrap/js/bootstrap.bundle.min.js') }}"></script>
