{% endblock %}

{% block body %}
    <!--=====================================
                       USER FORM PART START
           =======================================-->
    <section class="user-form-part">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-4 col-sm-4 col-md-4 col-lg-4 col-xl-4">
                    <div class="user-form-logo">
                        <a href="{{ path('app_accueil') }}"><img src="{{ asset('app/images/logo.png') }}"
                                                                 alt="logo"></a>
                    </div>
                    <div class="user-form-card">
                        <div class="user-form-title">
                            <h2>Bienvenu(e) !</h2>

                        </div>

                        <form class="user-form" method="post">
                            {% if error %}
                                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                            {% endif %}

                            {% if app.user %}
                                <div class="mb-3">
                                    You are logged in as {{ app.user.userIdentifier }}, <a
                                            href="{{ path('app_logout') }}">Logout</a>
                                </div>
                            {% endif %}

                            <h1 class="h3 mb-3 font-weight-normal">Connectez-vous</h1>
                            <label for="inputTelephone">Téléephone</label>
                            <input type="text" value="{{ last_username }}" name="telephone" id="inputTelephone"
                                   class="form-control" autocomplete="username" required autofocus>
                            <label for="inputPassword">Mot de passe </label>
                            <input type="password" name="password" id="inputPassword" class="form-control"
                                   autocomplete="current-password" required>

                            <input type="hidden" name="_csrf_token"
                                   value="{{ csrf_token('authenticate') }}"
                            >

                            {#
                            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                            See https://symfony.com/doc/current/security/remember_me.html

                            <div class="checkbox mb-3">
                                <label>
                                    <input type="checkbox" name="_remember_me"> Remember me
                                </label>
                            </div>
                            #}
                            <div class="form-check mb-3">
                                <label>
                                    <input type="checkbox" name="_remember_me"> Se souvenir de moi
                                </label>
                            </div>

                            <div class="form-button">
                                <button type="submit">connexion</button>
                                <p><a href="#">Mot de passe oublié?</a></p>
                            </div>
                        </form>
                    </div>
                </div>

                {# <div class="user-form-footer"> #}
                {# <p>Greeny | &COPY; Copyright by <a href="#">Mironcoder</a></p> #}
                {# </div> #}
            </div>
            <div class="row justify-content-center">
                <div class="col-4 col-sm-4 col-md-4 col-lg-4 col-xl-4">
                    <div class="user-form-remind">
                        <p>Vous n'avez pas de compte?<a href="{{ path('app_register') }}">s'inscrire</a></p>
                    </div>
                </div>
            </div>
        </div>

    </section>
